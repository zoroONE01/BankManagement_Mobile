<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10dp"
    tools:context=".ui.transactionhistory.TransactionItemView">

    <ImageView
        android:id="@+id/spImg"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/img_master_card"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transactionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:text="Trans"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/spImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="4dp"
        android:text="1.000.000Ä‘"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/transactionTv"
        app:layout_constraintTop_toBottomOf="@id/transactionTv" />

    <TextView
        android:id="@+id/ngayGd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ngay"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/transactionTv"
        app:layout_constraintTop_toBottomOf="@+id/transactionTv" />

</androidx.constraintlayout.widget.ConstraintLayout>